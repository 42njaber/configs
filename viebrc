" Options
mapclear

set notimeout
set windowtitle="%app - %title"
set suspendtimeout=3600000
set searchwords+={"css_":"https://developer.mozilla.org/en-US/search?q=%s"}
set searchwords+={"pl_":"https://us.swi-prolog.org/search?for=%s"}
set searchwords+={"cpp_":"https://duckduckgo.com/?sites=cppreference.com&q=%s"}
set containerstartuppage=s:usematching

set passthroughkeys={}
set followchars=alpha
" Doesn't work?
" set passthroughkeys+={".*":"<F3>"}
" set container

nunmap D
unmap <F3>
map <C-c> <Esc>
map <C-q> <Nop>

nmap <Tab> <toggleTOC>
nmap <space>l <nextTab>
nmap <space>h <previousTab>
nmap <space>z <toCommandMode>buffer <NOP>
nmap zz <toCommandMode>suspend <NOP>
nmap ZZ <:%suspend>

command! session <:!ls -1 ~/.viebstore/ | rofi -no-lazy-grab -p "Choose session" -dmenu | { read SESSION; [ -z "$SESSION" ] && exit; mkdir -p "~/.viebstore/$SESSION";vieb --config-file=~/configs/viebrc --datafolder="~/.viebstore/$SESSION"; } >
nmap O <:session>

nmap <space>L <moveTabForward>
nmap <space>H <moveTabBackward>
nmap <space>t <:nohlsearch>

nmap t <:tabnew><toExploreMode>

nmap R <:reload>
nmap , <toSearchMode>

nmap / <:map>
nmap ยง <:set>

